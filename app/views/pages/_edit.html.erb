<%= form_for(@page) do |f| %>
    <%= render "shared/error", object: f.object %>
    <p><%= f.label :title %><br />
    <%= f.text_field :title %></p>

    <p><%= f.label :summary %><br />
    <%= f.text_field :summary %></p>

    <p><%= f.label :trend %><br />
    <%= f.select(:trend, @trends) %></p>

    <p><%= f.label :body %><br />
    <%= f.text_area :body%></p>

    <p><%= f.submit "Save", class: "btn btn-large btn-primary" %></p>
<% end %>
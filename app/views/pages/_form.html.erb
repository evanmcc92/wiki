<%= form_for(@page) do |f| %>
	<%= render "shared/error", object: f.object %>
    <p><%= f.label :title %><br />
    <%= f.text_field :title %></p>

    <p><%= f.label :summary %><br />
    <%= f.text_field :summary %></p>

    <p><%= f.label :trend %><br />
    <%= f.collection_select :trend_id, Trend.all, :id, :title %></p>

    <p><%= f.label :body %><br />
    <%= f.text_area :body, class: 'wysihtml5' %></p>

    <p><%= f.submit "Create the page", class: "btn btn-large btn-primary" %></p>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>
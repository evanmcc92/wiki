<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h3>Oops! <%= pluralize(@user.errors.count, "Error") %> in Creating Your Account:</h3>
        <ul>
            <% @user.errors.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
        </ul>
      </div>
    <% end %>
    <p><%= f.label :username%>
    <%= f.text_field :username %></p>

    <p><%= f.label :email %>
    <%= f.text_field :email %></p>

    <p><%= f.label :password %>
    <%= f.password_field :password %></p>

    <p><%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %><br /></p>

    <p><%= f.submit "Create my account", class: "btn btn-large btn-primary" %></p>
<% end %>
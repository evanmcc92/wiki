<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <div class="alert alert-danger">
        <h3>Oops! <%= pluralize(@user.errors.count, "Error") %> in Creating Your Account:</h3>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
        </ul>
      </div>
    <% end %>
    <p><%= f.label :username %><br />
    <%= f.text_field :username %></p>

    <p><%= f.label :email %><br />
    <%= f.text_field :email %></p>

    <p><%= f.label :password %><br />
    <%= f.password_field :password %></p>

    <p><%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %></p>

    <p><%= f.submit "Create my account", class: "btn btn-large btn-primary" %></p>
<% end %>
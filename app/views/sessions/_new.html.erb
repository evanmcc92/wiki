<%= form_tag login_user_path do %>
    <% if flash[:notice] %>
        <div id="error_explanation">
            <h3><%= flash[:notice] %></h3>
        </div>
    <% end %>
    <p>
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
    </p>
    <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </p>
    <p><%= submit_tag "Log in", class: "btn btn-large btn-primary" %></p>
<% end %>
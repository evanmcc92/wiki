<div id="left">

  <!-- search -->
  <p><%= form_tag(pages_path, :method => 'get', :class => "search") do %>
    <%= text_field_tag :search, params[:search], :placeholder => "Search" %>
  <% end %></p>
  <!-- end of search -->

  <!-- trend form -->
  <% if signed_in? %>
    <% if current_user.admin %>
    <div class="form-group">
      <%= form_for(@trend) do |f| %>
        <%= render "shared/error", object: f.object %>
        <%= f.text_field :title, placeholder: "Compose new trend..." %>
        <%= f.submit "Post", class: "btn btn-xs btn-primary" %>
      <% end %>
      </div>
    <% end %>
  <% end %>
  <!-- end of trend form -->
    <% @trends.each do |trend| %>
  <div class="panel-group" id="accordion">
      <!-- start of panel 1 -->
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne-<%= trend.id %>">
                <%= trend.title %>
              </a>
            </h4>
          </div>
          <div id="collapseOne-<%= trend.id %> collapseOne" class="panel-collapse collapse in">
            <div class="panel-body">
            <% if trend.pages.any? %>
              <% trend.pages.each do |page| %>
                  <p><%= link_to page.title, page_path(page) %></p>
              <%end%>
            <%else%>
              <p>No pages made</p>
            <%end%>
            </div>
          </div>
        </div>
      <!-- end of panel 1 -->
  </div>
    <% end %>

</div>